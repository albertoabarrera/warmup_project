<Window x:Class="Milestone1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Milestone1"
        mc:Ignorable="d"
        Title="Yelp App" Height="400" Width="600">
    <Grid>
        <Label x:Name="stateLabel" Content="State" HorizontalAlignment="Left" Margin="101,34,0,0" VerticalAlignment="Top" Height="35" Width="64" FontSize="15"/>
        <Label x:Name="cityLabel" Content="City" HorizontalAlignment="Left" Margin="101,84,0,0" VerticalAlignment="Top" RenderTransformOrigin="1.433,0.537" FontSize="15" Width="64"/>
        <ComboBox x:Name="stateList" HorizontalAlignment="Left" Margin="253,38,0,0" VerticalAlignment="Top" Width="169" FontSize="15" SelectionChanged="stateList_SelectionChanged"/>
        <ComboBox x:Name="cityList" HorizontalAlignment="Left" Margin="253,84,0,0" VerticalAlignment="Top" Width="169" FontSize="15" SelectionChanged="cityList_SelectionChanged"/>
        <DataGrid x:Name="dataGrid" HorizontalAlignment="Left" Height="240" Margin="10,119,0,0" VerticalAlignment="Top" Width="572" FontSize="15" SelectionChanged="dataGrid_SelectionChanged"/>

    </Grid>
</Window>
